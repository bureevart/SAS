<Page x:Class="SAS.Forms.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SAS.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid>
        <Label HorizontalAlignment="Center" 
            VerticalAlignment="Center" >
            <StackPanel HorizontalAlignment="Center">    
                <TextBlock HorizontalAlignment="Center" Text="Добро пожаловать в приложение системы охранной сигнализации!"/>
                <TextBlock HorizontalAlignment="Center" Text="Это приложение имитирует работу системы охранной сигнализации." />
                <TextBlock HorizontalAlignment="Center" Text="Вы можете ставить на охрану, снимать с охраны, контролировать зоны системы и просматривать историю тревог."/>
                <TextBlock HorizontalAlignment="Center" Text="Приложение создано в рамках лабораторной работы по дисциплине ПСРВ, студентом 4-го курса ЭАС Маровым Дмитрием."/>
                <TextBlock HorizontalAlignment="Center" Text="УФА 2023" />
            </StackPanel>
        </Label>
    </Grid>
</Page>
